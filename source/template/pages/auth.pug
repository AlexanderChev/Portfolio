extends ../_empty

block variables
	-var title = 'Авторизация'

block content
		.auth
			a(href='#' class='auth__btn') Авторизоваться
			.auth-window
				.auth-window__hello
					.auth-window__hello-content
						.auth-window__developer
							.developer.developer--auth
								include ../common/_developer
						.auth-window__social
							ul.social.social--auth
								include ../common/_social
					.auth-window__nav
						a(href='#' class='auth-window__link') Мои работы
						a(href='#' class='auth-window__link') Обо мне
						a(href='#' class='auth-window__link') Блог

				.auth-window__signin
					form(method='POST' class='auth-window__form')
						.auth-window__signin-content
							h2.title.title--sub
								span.title__text Авторизуйтесь

							label.auth-window__label
								input(type='text' name='login' class='auth-window__input-text' required placeholder='Логин')
								.auth-window__icon-wrap
									svg(class='auth-window__icon')
										use(xlink:href='assets/img/sprite.svg#login')

							label.auth-window__label
								input(type='password' name='password' class='auth-window__input-text' required placeholder='Пароль')
								.auth-window__icon-wrap
									svg(class='auth-window__icon')
										use(xlink:href='assets/img/sprite.svg#password')

							input(type='checkbox' name='captcha-checkbox' id='captcha-human' class='auth-window__input-checkbox' required)
							label(class='auth-window__label-checkbox' for='captcha-human') Я человек

							.auth-window__question Вы точно не робот?

							input(type='radio' name='captcha-radio' id='captcha-yes' class='auth-window__input-radio' required)
							label(class='auth-window__label-radio' for='captcha-yes') Да

							input(type='radio' name='captcha-radio' id='captcha-no' class='auth-window__input-radio' required)
							label(class='auth-window__label-radio' for='captcha-no') Не уверен


						.auth-window__nav
							a(href='#' id='backflip' class='auth-window__link') На главную
							input(type='submit' value='Войти' class='auth-window__link auth-window__submit')

