extends ../_template

block variables
	-var title = 'Обо мне'
	-var footerMod = 'footer--opacity'

block triangle
	<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1000 85" preserveaspectratio="none" class="header__triangle">
		<polygon class = 'header__triangle-left' points='0,0   0,86   500.8,86   500.8,75.5'></polygon>
		<polygon class = 'header__triangle-right' points='1000,0   1000,86   500,86   500,75.5'></polygon>

block content
	section.about
		.about__developer
			.developer-info
				h1.title.title--developer-info 
					span.title__text Обо мне
					svg(class='title__bg')
						use(xlink:href='assets/img/sprite.svg#about_header')
				.developer-info__content
					.developer-info__img-wrap
						img(class='developer-info__img' src='assets/img/work/developer.jpg' alt=)
					h2.title.title--sub 
						span.title__text Кто я
					p Я веб разработчик из Новосибирска. Мне 27 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
					p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
		.about__skills
			.skills
				h2.title.title--sub
					span.title__text Чем я могу быть<br> вам полезен
				p.skills__intro Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.

				each item in skillsList
					.skills__group
						h3.skills__group-title= item.title
						ul.skills__list
							each val in item.name
								li.skills__item
									.circle-progress
										svg.circle-progress__img(height='100%', width='100%')
											circle.circle-progress__part.circle-progress__part--stroke(cx='50%', cy='50%', r='50%')
											circle.circle-progress__part.circle-progress__part--fill(cx='50%', cy='50%', r='50%')
										span.circle-progress__name= val

block map
	section.contacts
		.contacts__map#map
		.contacts__window
			h2.title.title--sub
				span.title__text Контакты
			ul.contacts__list
				li.contacts__item
					svg(class='contacts__icon')
						use(xlink:href='assets/img/sprite.svg#skype')
					a(class='contacts__link' href='skype:Alexander Chev' target='_blank') Alexander Chev
					
				li.contacts__item
					svg(class='contacts__icon')
						use(xlink:href='assets/img/sprite.svg#envelope')
					a(class='contacts__link' href='mailto:alexchev92@gmail.com' target='_blank') alexchev92@gmail.com
				li.contacts__item
					svg(class='contacts__icon')
						use(xlink:href='assets/img/sprite.svg#phone')
					a(class='contacts__link' href='tel:89108189723' target='_blank') 8 910 818 97 23
				li.contacts__item
					svg(class='contacts__icon')
						use(xlink:href='assets/img/sprite.svg#map_marker')
					a.contacts__link Ярославль