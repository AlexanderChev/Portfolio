extends ../_template

block blog

block variables
	-var title = 'Блог'
	-var footerMod = 'footer--gray'
	-var socialGray = 'social--gray'

block figcaption
	h1.title.title--blog
		span.title__text Блог
		svg(class='title__bg')
			use(xlink:href='assets/img/sprite.svg#blog_header')
	p.developer__caption.developer__caption--regular Статьи, которые я не писал

block content
	section.blog
			include ../common/_sidebar
			.blog__articles
				each item, i in articlesList
						article(class='article' id=`#article-${i+1}`)
							h2.article__title= item.title
							time.article__datetime= item.date
							.article__content
								each par in item.text
									p= par

